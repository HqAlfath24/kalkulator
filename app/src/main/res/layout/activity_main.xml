<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Calculator"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="45dp"
        android:textStyle="bold" />



    <EditText
        android:id="@+id/edtBil1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="bilangan 1"
        android:inputType="number"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"/>



    <RadioGroup
        android:id="@+id/rgOperasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:id="@+id/rbTambah"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Tambah"
            android:layout_marginRight="3dp"/>

        <RadioButton
            android:id="@+id/rbKurang"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Kurang"
            android:layout_marginRight="3dp"/>

        <RadioButton
            android:id="@+id/rbKali"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Kali"
            android:layout_marginRight="3dp"/>

        <RadioButton
            android:id="@+id/rbBagi"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Bagi"
            android:layout_marginRight="3dp" />

    </RadioGroup>


    <EditText
        android:id="@+id/edtBil2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="bilangan 2"
        android:inputType="number"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"/>

    <Button
        android:id="@+id/btnHitung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hitung" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/txtBil1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginRight="5dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/txtOpr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="operasi hitung"
                android:layout_marginRight="5dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/txtBil2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="o"
                android:layout_marginRight="5dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:layout_marginRight="5dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/txtHasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="hasil"
                android:layout_marginRight="5dp"
                android:textAlignment="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtDel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="delete all"
            android:textAlignment="textEnd"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvData"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>



</LinearLayout>